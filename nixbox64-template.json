{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "1m",
      "boot_command": [
        "root<enter>",
        "stop sshd<enter>",
        "fdisk /dev/sda<enter>",
        "n",
        "<enter><enter><enter><enter><enter>",
        "a<enter>",
        "1<enter>",
        "w<enter>",
        "<wait>",
        "mkfs.ext4 -j -L nixos /dev/sda1<enter><wait5>",
        "mount LABEL=nixos /mnt<enter><wait>",
        "nixos-generate-config --root /mnt<enter><wait>",
        "curl http://{{ .HTTPIP }}:{{ .HTTPPort }}/configuration.nix | sed -e 's|nixbox|nixbox64|g' > /mnt/etc/nixos/configuration.nix<enter><wait>",
        "nixos-install && reboot<enter>"
      ],
      "guest_additions_mode": "disable",
      "guest_os_type": "Linux_64",
      "http_directory": "http",
      "iso_checksum": "73465988b04cdb611d26503bf968e2de",
      "iso_checksum_type": "md5",
      "iso_url": "http://releases.nixos.org/nixos/13.10/nixos-13.10.35723.15586a1/nixos-minimal-13.10.35723.15586a1-x86_64-linux.iso",
      "shutdown_command": "sudo shutdown -h now",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "5m",
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sudo sh '{{.Path}}'",
      "script": "scripts/postinstall.sh"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "nixbox64-{{.Provider}}.box"
    }
  ]
}

